<%
  # ------------------------------------------------------
  # ####        List templatete (Offers.index)        ####
  # ------------------------------------------------------
%>

<div class="well">

  <h2 class="my_page_title">Lista wszystkich ofert <span id="h2_list_count_info">(<%= @offers.count %>)</span></h2>

  <table class="table table-hover">
    <tr>
      <th>Tytuł</th>
      <th>Opis</th>
      <th>Komentarze</th>
      <th>Cena sprzedaży</th>
      <th>Edycja</th>
    </tr>

    <% @offers.each do |offer| %>
      <tr>
        <td><a href="<%= offer_path(offer) %>" title="Szczegóły"><strong><%= offer.title %></strong></a></td>
        <td><%= offer.text %></td>
        <td><%= 0 %></td>
        <td><%= number_to_currency( offer.price, unit: "zł", separator: ",", delimiter: " ", format: "%n %u" ) %></td>
        <td>
          <a href="<%= offer_path(offer) %>" title="Szczegóły"><span class="glyphicon glyphicon-list-alt"></span></a>
          <a href="<%= edit_offer_path(offer) %>" title="Edycja"><span class="glyphicon glyphicon-cog"></span></a>
          <%
            # link_to "szczegóły", offer
            # link_to "edycja", edit_offer_path(offer)
          %>
        </td>
      </tr>
    <% end %>
  </table>

  <hr />
  <button type="button" class="btn btn-primary" onclick="location='<%= new_offer_path %>';"><span class="glyphicon glyphicon-plus-sign"></span> Dodaj nową ofertę</button>

  <% # link_to 'Dodaj nową ofertę', new_offer_path %>

</div>
