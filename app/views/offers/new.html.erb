<%
  # ------------------------------------------------------
  # ####           View templatete (Offers)           ####
  # ------------------------------------------------------
%>

<div class="well">

  <h2 class="my_page_title">Nowa oferta</h2>

  <%= form_for :offer, url: offers_path do |f| %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :text %><br>
      <%= f.text_area :text %>
    </p>

    <p>
      <%= f.label :tbegin, "PoczÄ…tek emisji" %><br>
      <%= f.date_field :tbegin %>
    </p>

    <p>
      <%= f.label :tend, "Koniec emisji" %><br>
      <%= f.date_field :tend %>
    </p>

    <p>
      <%= f.label :price, "Cena \"Kup teraz\"" %><br>
      <%= f.text_field :price %>
    </p>

    <p>
      <%= f.label :seller, "Sprzedawca" %><br>
      <%= f.text_field :seller %>
    </p>

    <p>
      <%= f.submit %>
    </p>
  <% end %>

  <hr />
  <%= link_to 'Anuluj', offers_path %>

</div>
